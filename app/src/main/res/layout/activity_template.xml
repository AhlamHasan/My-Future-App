<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Template"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/base_blue">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="358dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:fontFamily="sans-serif-black"
                android:text="   My CV  "
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/close"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:background="@drawable/ihome_icone"
                android:onClick="returnhomeCV" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_name"
                    android:layout_width="279dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"
                    android:textColor="@color/base_blue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/personal_detail"
                    android:layout_width="372dp"
                    android:layout_height="44dp"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/Objective"
                    android:layout_width="374dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="377dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="ـــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Education"
                    android:textColor="@color/base_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Education_detail"
                    android:layout_width="376dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="ـــــــــــ"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Experience"
                    android:textColor="@color/base_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Experience_detail"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="ـــــــــــ"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Projects"
                    android:textColor="@color/base_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Projects_detail"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="ـــــــــــ"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:text="Skills"
                    android:textColor="@color/base_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Skills_detail"
                    android:layout_width="377dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="#292828"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>

